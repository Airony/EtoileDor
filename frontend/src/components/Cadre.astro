<style>
    .container {
        display: grid;
        grid-template-columns: max-content fit-content(700px) max-content;
        grid-template-rows: max-content 1fr max-content;
        width: max-content;
        max-width: 100%;
        fill: theme("colors.secondary.400");
    }
    .line {
        position: relative;
        background-color: theme("colors.secondary.400");
    }

    .line::before,
    .line::after {
        position: absolute;
        content: "";
        display: block;
        background-color: inherit;
    }

    .line-horizontal {
        height: 4px;
    }

    .line-horizontal::before,
    .line-horizontal::after {
        height: 100%;
        width: 4px;
    }
    .line-horizontal::before {
        left: 0;
        transform: translateX(-50%);
    }
    .line-horizontal::after {
        right: 0;
        transform: translateX(50%);
    }

    .line-vertical {
        width: 4px;
    }

    .line-vertical::before,
    .line-vertical::after {
        width: 100%;
        height: 4px;
    }
    .line-vertical::before {
        top: 0;
        transform: translateY(-50%);
    }
    .line-vertical::after {
        bottom: 0;
        transform: translateY(50%);
    }
</style>
<div class="container">
    <>
        <div class="hidden sm:block">
            <Fragment set:html={cornerLg} />
        </div>
        <div class="sm:hidden">
            <Fragment set:html={cornerSm} />
        </div>
    </>
    <div class="line line-horizontal self-start"></div>
    <div class="-scale-x-100">
        <div class="hidden sm:block">
            <Fragment set:html={cornerLg} />
        </div>
        <div class="sm:hidden">
            <Fragment set:html={cornerSm} />
        </div>
    </div>
    <div class="line line-vertical self-stretch"></div>
    <div class="py-4 sm:p-0">
        <slot />
    </div>
    <div class="line line-vertical self-stretch justify-self-end"></div>
    <div class="-scale-y-100">
        <div class="hidden sm:block">
            <Fragment set:html={cornerLg} />
        </div>
        <div class="sm:hidden">
            <Fragment set:html={cornerSm} />
        </div>
    </div>
    <div class="line line-horizontal self-end"></div>
    <div class="-scale-100">
        <div class="hidden sm:block">
            <Fragment set:html={cornerLg} />
        </div>
        <div class="sm:hidden">
            <Fragment set:html={cornerSm} />
        </div>
    </div>
</div>
